<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <TextView
        android:id="@+id/notification_setting_text"
        style="@style/Text"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Push Notifications"/>

    <Switch
        android:id="@+id/notification_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@+id/notification_setting_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:checked="true"/>

    <TextView
        android:id="@+id/goals_setting_text"
        style="@style/Text"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/notification_setting_text"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Allow Goals Editing"/>

    <Switch
        android:id="@+id/goals_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@+id/goals_setting_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:checked="true"/>

    <TextView
        android:id="@+id/history_rec_setting_text"
        style="@style/Text"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/goals_setting"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Allow Historical Recording"/>

    <Switch
        android:id="@+id/history_rec_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@+id/history_rec_setting_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:checked="true"/>

    <Button
        android:id="@+id/clear_history_button"
        style="@style/Text"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Clear History"/>
</androidx.constraintlayout.widget.ConstraintLayout>