<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".SettingsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/navi_activity"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:padding="8dp"
            android:src="@drawable/activity_icon"
            android:clickable="true"
            android:onClick="changeActivity"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/navi_history"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/navi_history"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:padding="8dp"
            android:src="@drawable/history_icon"
            android:clickable="true"
            android:onClick="changeActivity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/navi_settings"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:background="@color/background"
            android:padding="8dp"
            android:src="@drawable/setting_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/navi_history" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/notification_setting_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        style="@style/Text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Push Notifications"/>

    <Switch
        android:id="@+id/notification_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@+id/notification_setting_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:checked="true"/>

    <TextView
        android:id="@+id/goals_setting_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        style="@style/Text"
        app:layout_constraintTop_toBottomOf="@+id/notification_setting_text"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Goals Editable"/>

    <Switch
        android:id="@+id/goals_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@+id/goals_setting_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:checked="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@id/navigation_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Clear History"/>
</androidx.constraintlayout.widget.ConstraintLayout>