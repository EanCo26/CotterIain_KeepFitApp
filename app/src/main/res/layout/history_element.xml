<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/grey">

    <TextView
        android:id="@+id/date"
        android:layout_margin="8dp"
        style="@style/Text"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="19/02/2021"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        style="@style/Text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/steps_layout"
        app:layout_constraintTop_toBottomOf="@id/date"
        android:text="The Goal Name"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/steps_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/steps"
            style="@style/Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Steps: "/>

        <TextView
            android:id="@+id/steps_num"
            style="@style/Text"
            app:layout_constraintStart_toEndOf="@id/steps"
            app:layout_constraintTop_toTopOf="parent"
            android:text="7500"/>

        <TextView
            android:id="@+id/goal_steps"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            style="@style/Text"
            app:layout_constraintStart_toStartOf="@id/steps"
            app:layout_constraintEnd_toEndOf="@id/steps"
            app:layout_constraintTop_toBottomOf="@id/steps"
            android:text="Goal: "/>

        <TextView
            android:id="@+id/goal_steps_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text"
            app:layout_constraintStart_toEndOf="@id/steps"
            app:layout_constraintTop_toTopOf="@id/goal_steps"
            android:text="10000"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/completion_bar"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:indeterminateOnly="false"
        android:max="100"
        android:progressDrawable="@drawable/progress_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:progress="75"/>
</androidx.constraintlayout.widget.ConstraintLayout>