<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/dark_red</item>
        <item name="colorAccent">@color/red</item>
        <item name="background">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
    </style>

    <style name="StandardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text" parent="StandardView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="Title" parent="Text">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="DisplayText" parent="Text">
        <item name="android:textSize">40sp</item>
    </style>
    <style name="ElementText" parent="Text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:max">100</item>
        <item name="android:progressDrawable">@drawable/progress_circle</item>
    </style>

    <style name="EditTextStyle" parent="StandardView">
        <item name="android:imeOptions">actionDone</item>
        <item name="android:cursorVisible">false</item>
        <item name="backgroundTint">@color/red</item>
    </style>
    <style name="EditTextNumber" parent="EditTextStyle">
        <item name="android:inputType">number</item>
        <item name="android:maxLength">@integer/steps_character_limit</item>
    </style>
    <style name="EditTextString" parent="EditTextStyle">
        <item name="android:maxLength">@integer/name_character_limit</item>
    </style>

    <style name="SwitchStyle" parent="StandardView">
        <item name="android:checked">true</item>
    </style>
</resources>